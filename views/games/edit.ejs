<%- include('../partials/head') %>


<div class="add-game-background">
  <div class="add-game-container">
    <h2>Edit <%= foundGame.title %></h2>

    <form action="/games/<%= foundGame._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="add-game-form">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= foundGame.title %>" required maxlength="20" />
      </div>

     <div class="form-group">
  <label>Platform</label><br />
   <div class="radio-group">
  <div>
    <label><input type="radio" name="platform" value="PC" <%= foundGame.platform === 'PC' ? 'checked' : '' %> required> PC</label>
  </div>
  <div>
    <label><input type="radio" name="platform" value="PlayStation" <%= foundGame.platform === 'PlayStation' ? 'checked' : '' %> required> PlayStation</label>
  </div>
  <div>
    <label><input type="radio" name="platform" value="Xbox" <%= foundGame.platform === 'Xbox' ? 'checked' : '' %> required> Xbox</label>
  </div>
  <div>
    <label><input type="radio" name="platform" value="Nintendo" <%= foundGame.platform === 'Nintendo' ? 'checked' : '' %> required> Nintendo</label>
  </div>
</div>
</div>


      <div class="form-group">
        <label for="paid">Paid</label>
        <input type="text" name="paid" id="paid" value="<%= foundGame.paid %>" required maxlength="4" />
      </div>

    <div class="form-group">
  <label>Status</label><br />
   <div class="radio-group">
  <div>
    <label><input type="radio" name="status" value="Completed" <%= foundGame.status === 'Completed' ? 'checked' : '' %> required> Completed</label>
  </div>
  <div>
    <label><input type="radio" name="status" value="Playing" <%= foundGame.status === 'Playing' ? 'checked' : '' %> required> Playing</label>
  </div>
  <div>
    <label><input type="radio" name="status" value="Not Started" <%= foundGame.status === 'Not Started' ? 'checked' : '' %> required> Not Started</label>
  </div>
</div>
</div>


      <div class="form-group">
        <label for="image">Upload New Image (optional)</label>
        <input type="file" name="image" id="image" accept="image/*" />
      </div>

      <button type="submit" class="submit-btn">Update Game</button>
    </form>
  </div>
</div>

</body>
</html>