<%- include('../partials/head') %>

    <form action="/games/<%= foundGame._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
<h2>Edit <%= foundGame.title %></h2>

<div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%=foundGame.title%>" required>
</div>

<div>
    <label for="platform">Platform</label>
    <input type="text" name="platform" value="<%=foundGame.platform%>" required>
</div>

<div>
    <label for="paid">Paid</label>
    <input type="text" name="paid" value="<%=foundGame.paid%>" required>
</div>

<div>
    <label for="status">Status</label>
    <input type="text" name="status" value="<%=foundGame.status%>" required>
</div>

<div>
    <label for="image">Image URL</label>
    <input type="file" name="image" value="<%=foundGame.image%>" required>
</div>

<button type="submit">Update Game</button>



    </form>
</body>
</html>