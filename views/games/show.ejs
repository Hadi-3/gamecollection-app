<%- include('../partials/head') %>

<div class="page-background" style="background-image: url('<%= foundGame.image?.url %>');"></div>

<div class="game-details-wrapper">
  <div class="game-details-card">
    <h2><%= foundGame.title %></h2>

    <img src="<%= foundGame.image?.url %>" alt="Image of <%= foundGame.title %>" class="game-img">

    <div class="game-info">
      <p class="game-meta">Status: <%= foundGame.status %></p>
      <p class="game-meta">Platform: <%= foundGame.platform %></p>
      <p><strong>Paid:</strong> $<%= foundGame.paid %></p>

      <div class="game-actions">
        <a href="/games" class="btn btn-secondary">Back to Games</a>
        <a href="/games/<%= foundGame._id %>/edit" class="btn btn-primary">Edit</a>
        <form action="/games/<%= foundGame._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
